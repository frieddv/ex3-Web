
@{
    ViewBag.Title = "index2";
}

<head>
    <style>
        body {
            margin: 0px;
        }
    </style>
</head>
<body background="~/Content/Images/export-map-share.png" style="background-size:100% 100%; background-attachment:fixed; width:100%; height:100%; overflow: hidden;">
    <canvas id="canvas" style="position:absolute"></canvas>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        canvas.setAttribute('width', window.innerWidth)
        canvas.setAttribute('height', window.innerHeight)
        var old_lon;
        var old_lat;
        var c = document.getElementById("canvas").getContext("2d");
        lon = ((@ViewBag.lon + 180) * (window.innerWidth / 360));
        lat = ((@ViewBag.lat + 90) * (window.innerHeight / 180));
        c.beginPath();
        c.arc(lon, lat, 6, 0, 2 * Math.PI);
        c.stroke();
        c.fillStyle = "red";
        c.fill();
        old_lon = lon;
        old_lat = lat;

        myTimer = (function () {
            $.post("@Url.Action("GetArgs")").done(function (xml) {
                var xmlDoc = $.parseXML(xml);
                $xml = $(xmlDoc);
                lon = parseFloat($xml.find("Lon").text());
                lat = parseFloat($xml.find("Lat").text());
                var temp_lon = ((lon + 180) * (window.innerWidth / 360));
                var temp_lat = ((lat + 90) * (window.innerHeight / 180));
                c.beginPath();
                c.lineWidth = 1;
                c.moveTo(old_lon, old_lat);
                c.lineTo(temp_lon, temp_lat);
                c.strokeStyle = "red";
                c.stroke();
                c.closePath();
                old_lon = temp_lon;
                old_lat = temp_lat;
            });
        });
        IntervalTime =@ViewBag.rate * 1000;
        setInterval(myTimer, IntervalTime);
        myTimer();

    </script>
</body>

